@page
@model OlympicsWebApp.Pages.Disciplines.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center heading">Delete Discipline Details</h1>


<div>
    <h4>Are You Sure to Remove Discipline Details?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Discipline.DisciplineName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discipline.DisciplineName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Discipline.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
