@page
@model OlympicsWebApp.Pages.Medals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center heading">All Medals</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Medal Details</a>
</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                Country Name
            </th>
            <th>
                Total Gold
            </th>
            <th>
                Total Silver
            </th>
            <th>
                Total Bronze
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Medal)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoldMedal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BronzeMedal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SilverMedal)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-secondary mr-2" asp-route-id="@item.Id">Edit</a>
                <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
