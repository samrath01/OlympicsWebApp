@page
@model OlympicsWebApp.Pages.Medals.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center heading">Delete Medal Details</h1>
<div>
    <h4>Are you sure to remove Medal Details?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medal.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medal.Country.CountryName)
        </dd>
        <dt class="col-sm-2">
            Total Gold
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medal.GoldMedal)
        </dd>
        <dt class="col-sm-2">
            Total Silver
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medal.SilverMedal)
        </dd>
        <dt class="col-sm-2">
            Total Bronze
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medal.BronzeMedal)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Medal.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
